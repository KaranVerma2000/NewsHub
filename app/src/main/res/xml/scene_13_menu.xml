<?xml version="1.0" encoding="utf-8"?>
<MotionScene
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetStart="@+id/start"
        motion:constraintSetEnd="@+id/end"
        motion:duration="2000"
        motion:motionInterpolator="linear" >
        <OnSwipe
            motion:dragDirection="dragRight"
            motion:touchAnchorSide="left"
            />
    </Transition>

        <ConstraintSet android:id="@+id/start">
            <Constraint
                android:id="@+id/Entertainment"
                android:layout_height="wrap_content"
                android:paddingVertical="10dp"
                android:layout_width="180dp"
                android:rotation="90"
                android:translationX="100dp"
                android:layout_marginTop="100dp"
                motion:layout_constraintEnd_toEndOf="parent"
                motion:layout_constraintStart_toStartOf="parent"
                motion:layout_constraintTop_toTopOf="parent"
                motion:layout_constraintVertical_chainStyle="spread" />

            <Constraint
                android:id="@+id/Sports"
                android:paddingVertical="10dp"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:rotation="90"
                android:translationX="100dp"
                android:layout_marginTop="20dp"
                motion:layout_constraintEnd_toEndOf="parent"
                motion:layout_constraintStart_toStartOf="parent"
                motion:layout_constraintTop_toBottomOf="@+id/Entertainment"/>

            <Constraint
                android:id="@+id/Business"
                android:paddingVertical="10dp"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:rotation="90"
                android:translationX="100dp"
                android:layout_marginTop="20dp"
                motion:layout_constraintEnd_toEndOf="parent"
                motion:layout_constraintStart_toStartOf="parent"
                motion:layout_constraintTop_toBottomOf="@+id/Sports" />

            <Constraint
                android:id="@+id/International"
                android:paddingVertical="10dp"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:rotation="90"
                android:translationX="100dp"
                android:layout_marginTop="20dp"
                motion:layout_constraintEnd_toEndOf="parent"
                motion:layout_constraintStart_toStartOf="parent"
                motion:layout_constraintTop_toBottomOf="@+id/Business" />

            <Constraint
                android:id="@+id/Technology"
                android:paddingVertical="10dp"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:rotation="90"
                android:translationX="100dp"
                android:layout_marginTop="20dp"
                motion:layout_constraintEnd_toEndOf="parent"
                motion:layout_constraintStart_toStartOf="parent"
                motion:layout_constraintTop_toBottomOf="@+id/International" />


            <Constraint
                android:id="@+id/Medical"
                android:paddingVertical="10dp"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:rotation="90"
                android:translationX="100dp"
                android:layout_marginTop="20dp"
                motion:layout_constraintEnd_toEndOf="parent"
                motion:layout_constraintStart_toStartOf="parent"
                motion:layout_constraintTop_toBottomOf="@+id/Technology" />


            <Constraint
                android:id="@+id/Bookmark"
                android:paddingVertical="10dp"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:rotation="90"
                android:translationX="100dp"
                android:layout_marginTop="20dp"
                motion:layout_constraintEnd_toEndOf="parent"
                motion:layout_constraintStart_toStartOf="parent"
                motion:layout_constraintTop_toBottomOf="@+id/Medical"/>
        </ConstraintSet>

        <ConstraintSet android:id="@+id/end">
            <Constraint
                android:id="@+id/Entertainment"
                android:paddingVertical="10dp"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                motion:layout_constraintEnd_toEndOf="parent"
                motion:layout_constraintHorizontal_bias="0.5"
                motion:layout_constraintStart_toStartOf="parent"
                motion:layout_constraintTop_toTopOf="parent"
                motion:layout_constraintVertical_bias="0.0"
                motion:layout_constraintVertical_chainStyle="packed" />

            <Constraint
                android:id="@+id/Sports"
                android:paddingVertical="10dp"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                motion:layout_constraintEnd_toEndOf="parent"
                motion:layout_constraintHorizontal_bias="0.5"
                motion:layout_constraintStart_toStartOf="parent"
                motion:layout_constraintTop_toBottomOf="@+id/Entertainment" />

            <Constraint
                android:id="@+id/Business"
                android:paddingVertical="10dp"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                motion:layout_constraintEnd_toEndOf="parent"
                motion:layout_constraintHorizontal_bias="0.5"
                motion:layout_constraintStart_toStartOf="parent"
                motion:layout_constraintTop_toBottomOf="@+id/Sports" />

            <Constraint
                android:id="@id/International"
                android:paddingVertical="10dp"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                motion:layout_constraintEnd_toEndOf="parent"
                motion:layout_constraintHorizontal_bias="0.5"
                motion:layout_constraintStart_toStartOf="parent"
                motion:layout_constraintTop_toBottomOf="@+id/Business" />


            <Constraint
                android:id="@id/Medical"
                android:paddingVertical="10dp"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                motion:layout_constraintEnd_toEndOf="parent"
                motion:layout_constraintHorizontal_bias="0.5"
                motion:layout_constraintStart_toStartOf="parent"
                motion:layout_constraintTop_toBottomOf="@+id/Technology" />

            <Constraint
                android:id="@id/Technology"
                android:paddingVertical="10dp"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                motion:layout_constraintEnd_toEndOf="parent"
                motion:layout_constraintHorizontal_bias="0.5"
                motion:layout_constraintStart_toStartOf="parent"
                motion:layout_constraintTop_toBottomOf="@+id/International"/>

            <Constraint
                android:id="@+id/Bookmark"
                android:paddingVertical="10dp"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                motion:layout_constraintEnd_toEndOf="parent"
                motion:layout_constraintHorizontal_bias="0.5"
                motion:layout_constraintStart_toStartOf="parent"
                motion:layout_constraintTop_toBottomOf="@+id/Medical" />
        </ConstraintSet>
</MotionScene>